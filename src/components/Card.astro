---
interface Props {
  name: string
  company: string
  rol: string
  body: string
  img: string
}

const { name, company, rol, body, img } = Astro.props
---

<div class='flex flex-col items-center md:flex-row md:max-w-xl'>
  <img
    class='object-cover w-full rounded-t-lg h-auto md:w-48 md:rounded-none md:rounded-s-lg'
    src={img}
    alt={name}
  />
  <div class='flex flex-col justify-between p-4 leading-normal'>
    <h5 class='mb-2 text-2xl font-bold tracking-tight text-gray-900 leading-3'>
      {name}
    </h5>
    <h6 class='text-1xl font-bold text-gray-600'>{company}</h6>
    <p class='mt-3 font-bold text-gray-900'>{rol}</p>
    <p class='mt-3 font-normal text-gray-700 dark:text-gray-400'>
      {body}
    </p>
  </div>
</div>
