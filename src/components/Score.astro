---
import { t } from 'i18next'
import { Numbers } from './Numbers'
---

<section>
  <div class='mt-10 home-activities text-center'>
    <div class='home-activities-wrapper'>
      <div class='relative'>
        <img
          src='/img/bgscore1.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            +<Numbers client:only='react' number='250' duration='5' />
          </span>
          <p class='text-white text-2xl font-extrabold'>{t('home.bullet_1')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bgscore2.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            <Numbers client:only='react' number='13000' duration='5' />
            <span class='text-white' set:html={t('home.m2')} />
          </span>
          <p class='text-white text-2xl font-extrabold'>{t('home.bullet_2')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bgscore3.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            +<Numbers client:only='react' number='4' duration='5' />
          </span>
          <p class='text-white text-2xl font-extrabold'>{t('home.bullet_3')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bgscore4.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-5xl'>
            <Numbers client:only='react' number='15000' duration='5' />
          </span>
          <p class='text-white text-xl font-extrabold'>{t('home.bullet_4')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bgscore5.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-4xl'>
            + <Numbers client:only='react' number='1370' duration='5' />
            <span class='text-white'>MDP</span>
          </span>
          <p class='text-white text-2xl font-extrabold'>{t('home.bullet_5')}</p>
        </div>
      </div>
      <div class='relative'>
        <img
          src='/img/bgscore6.webp'
          alt='Categoria 1'
          class='w-full h-full object-cover absolute z-[-1]'
        />
        <div class='info'>
          <span class='text-[#E20B24] font-bold text-4xl'>
            <Numbers client:only='react' number='260' duration='5' />
            <span class='text-white'>MDP</span>
          </span>
          <p class='text-white text-xl font-extrabold'>{t('home.bullet_6')}</p>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .home-activities-wrapper {
    display: flex;
    flex-wrap: wrap;
    position: relative;
    z-index: 1;
    height: auto;
  }

  .home-activities-wrapper div {
    width: 0;
    height: 500px;
    flex-grow: 1;
    transition: 0.5s ease;
    box-sizing: border-box;
  }

  .home-activities-wrapper > div:hover {
    cursor: crosshair;
    width: 300px;
    opacity: 1 !important;
  }
  .home-activities-wrapper div:hover ul {
    display: block;
  }

  .home-activities-wrapper div:hover video {
    opacity: 1 !important;
  }

  .home-activities-wrapper .info {
    width: 100%;
    color: white;
    font-weight: bolder;
    background: linear-gradient(to bottom, transparent, black);
    height: 100%;
    padding: 10px;
    transition: none;
    display: flex;
    flex-direction: column;
    justify-content: end;
  }
  .home-activities-wrapper > div:hover .info {
    background: linear-gradient(to bottom, transparent 80%, black);
  }
  @media (max-width: 1024px) {
    .home-activities-wrapper .info {
      top: 0;
      height: 100%;
    }
    .home-activities-wrapper ul {
      display: block;
    }
    .home-activities-wrapper div {
      width: 100%;
      height: 500px;
    }
  }
</style>
